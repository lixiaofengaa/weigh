<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_weigh_weigh_from" model="ir.ui.view">
            <field name="name">weigh weigh</field>
            <field name="model">weigh.weigh</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="dispatche_vehicle_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_weigh_weigh_tree" model="ir.ui.view">
            <field name="name">weigh.weigh.tree</field>
            <field name="model">weigh.weigh</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="dispatche_vehicle_id"/>
                </tree>
            </field>
        </record>
        <record id="action_weigh_weigh" model="ir.actions.act_window">
            <field name="name">weigh weigh</field>
            <field name="res_model">weigh.weigh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p><b>No weigh found!</b></p>
              <p>You should try others search criteria.</p>
            </field>
        </record>
    </data>
</openerp>
